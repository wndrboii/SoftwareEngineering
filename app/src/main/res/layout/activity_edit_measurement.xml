<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bottom_main_page">
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/rounded_background"
        android:padding="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/header_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:letterSpacing=".1"
                android:paddingVertical="20dp"
                android:text="Edytuj pomiar"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="19dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:text="Wzrost"
                    android:textColor="@color/white"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/height"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="25dp"
                    android:background="@color/dark2"
                    android:hint="Wpisz wzrost"
                    android:inputType="text"
                    android:paddingLeft="15dp"
                    android:textColorHint="@color/grey"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="80dp"
                    android:text="Waga"
                    android:textColor="@color/white"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/weight"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="105dp"
                    android:background="@color/dark2"
                    android:hint="Wpisz wagę"
                    android:inputType="number"
                    android:paddingLeft="15dp"
                    android:textColorHint="@color/grey"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="160dp"
                    android:text="Obwód barków"
                    android:textColor="@color/white"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/shoulder"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="185dp"
                    android:background="@color/dark2"
                    android:hint="Wpisz obwód barków"
                    android:inputType="number"
                    android:paddingLeft="15dp"
                    android:textColorHint="@color/grey"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="240dp"
                    android:text="Obwód ramienia"
                    android:textColor="@color/white"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/arm"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="265dp"
                    android:background="@color/dark2"
                    android:hint="Wpisz obwód ramienia"
                    android:inputType="number"
                    android:paddingLeft="15dp"
                    android:textColorHint="@color/grey"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="320dp"
                    android:text="Obwód klatki pierściwej"
                    android:textColor="@color/white"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/chest"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="345dp"
                    android:background="@color/dark2"
                    android:hint="Wpisz obwód klatki pierściowej"
                    android:inputType="number"
                    android:paddingLeft="15dp"
                    android:textColorHint="@color/grey"
                    android:textSize="12dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="400dp"
                    android:text="Obwód talii"
                    android:textColor="@color/white"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/waist"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="425dp"
                    android:background="@color/dark2"
                    android:hint="Wpisz obwód talii"
                    android:inputType="number"
                    android:paddingLeft="15dp"
                    android:textColorHint="@color/grey"
                    android:textSize="12dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="480dp"
                    android:text="Obwód bioder"
                    android:textColor="@color/white"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/hips"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="505dp"
                    android:background="@color/dark2"
                    android:hint="Wpisz obwód bioder"
                    android:inputType="number"
                    android:paddingLeft="15dp"
                    android:textColorHint="@color/grey"
                    android:textSize="12dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="560dp"
                    android:text="Obwód ud"
                    android:textColor="@color/white"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/thigh"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="585dp"
                    android:background="@color/dark2"
                    android:hint="Wpisz obwód ud"
                    android:inputType="number"
                    android:paddingLeft="15dp"
                    android:textColorHint="@color/grey"
                    android:textSize="12dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="640dp"
                    android:text="Obwód łydki"
                    android:textColor="@color/white"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/calves"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="665dp"
                    android:background="@color/dark2"
                    android:hint="Wpisz obwód łydki"
                    android:inputType="number"
                    android:paddingLeft="15dp"
                    android:textColorHint="@color/grey"
                    android:textSize="12dp" />

            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>

    <ImageButton
        android:id="@+id/submit_btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="170dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_checkmark"
        android:background="#00ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/measurements_arr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Spojrzeć na historię pomiarów"
        android:textSize="14dp"
        android:textColor="@color/grey"
        android:textAlignment="center"
        android:layout_marginBottom="165dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <RelativeLayout
        android:id="@+id/menu_panel"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/home_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="65dp"
            android:layout_marginBottom="26dp"
            android:background="@drawable/ic_home"
            android:backgroundTint="@color/grey" />

        <TextView
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="80dp"
            android:layout_marginBottom="12dp"
            android:text="Home"
            android:textColor="@color/grey"
            android:textSize="11sp" />

        <ImageButton
            android:id="@+id/categories_btn"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="33dp"
            android:background="@drawable/ic_menu"
            android:backgroundTint="@color/white" />

        <TextView
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="12dp"
            android:text="Categories"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="11sp" />

        <ImageButton
            android:id="@+id/logout_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="65dp"
            android:layout_marginBottom="33dp"
            android:background="@drawable/ic_logout"
            android:backgroundTint="@color/grey" />

        <TextView
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="47dp"
            android:layout_marginBottom="12dp"
            android:text="Logout"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="11sp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>