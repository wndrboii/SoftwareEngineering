<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bottom_main_page">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/rounded_background">

        <TextView
            android:id="@+id/header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:letterSpacing=".1"
            android:paddingVertical="20dp"
            android:text="Edytuj posiłek"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="19dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:text="Nazwa posiłku"
                android:textColor="@color/white"
                android:textSize="13dp" />

            <EditText
                android:id="@+id/name_edit_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="25dp"
                android:background="@color/dark2"
                android:hint="Wpisz nazwę posiłku"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textColorHint="@color/grey"
                android:textSize="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="80dp"
                android:text="Kategoria"
                android:textColor="@color/white"
                android:textSize="13dp" />

            <EditText
                android:id="@+id/kategorie_edit_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="105dp"
                android:background="@color/dark2"
                android:hint="Wpisz kategorię"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textColorHint="@color/grey"
                android:textSize="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="160dp"
                android:text="Ilość posiłku"
                android:textColor="@color/white"
                android:textSize="13dp" />

            <EditText
                android:id="@+id/ilosc_edit_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="185dp"
                android:background="@color/dark2"
                android:hint="Wpisz ilość posiłku"
                android:inputType="number"
                android:paddingLeft="15dp"
                android:textColorHint="@color/grey"
                android:textSize="12dp" />

            <Button
                android:id="@+id/dialog_btn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="30dp"
                android:text="Wybierz składniki"
                android:textSize="10dp" />

            <Button
                android:id="@+id/choose_image_button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="Wybierz zdjęcie"
                android:textSize="10dp"
                android:layout_marginBottom="80dp"
                android:layout_alignParentBottom="true"
                />
            <ImageView
                android:id="@+id/image_view"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="35dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:background="@color/grey"/>

        </RelativeLayout>

    </RelativeLayout>

    <ImageButton
        android:id="@+id/submit_btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="170dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_checkmark"
        android:background="#00ffffff"/>

    <TextView
        android:id="@+id/posilki_arr_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Spojrzeć na listę posiłków"
        android:textSize="14dp"
        android:textColor="@color/grey"
        android:textAlignment="center"
        android:layout_marginBottom="165dp"
        android:textStyle="bold"/>

    <RelativeLayout
        android:id="@+id/menu_panel"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp">

        <ImageButton
            android:id="@+id/home_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="65dp"
            android:layout_marginBottom="26dp"
            android:background="@drawable/ic_home"
            android:backgroundTint="@color/grey" />

        <TextView
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="80dp"
            android:layout_marginBottom="12dp"
            android:text="Home"
            android:textColor="@color/grey"
            android:textSize="11sp" />

        <ImageButton
            android:id="@+id/categories_btn"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="33dp"
            android:background="@drawable/ic_menu"
            android:backgroundTint="@color/white" />

        <TextView
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="12dp"
            android:text="Categories"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="11sp" />

        <ImageButton
            android:id="@+id/logout_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="65dp"
            android:layout_marginBottom="33dp"
            android:background="@drawable/ic_logout"
            android:backgroundTint="@color/grey" />

        <TextView
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="47dp"
            android:layout_marginBottom="12dp"
            android:text="Logout"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="11sp" />
    </RelativeLayout>

</RelativeLayout>