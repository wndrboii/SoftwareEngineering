<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <RelativeLayout
        android:id="@+id/upper_wrapper"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:background="@drawable/gradient_top_main_page">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="84dp"
            android:shadowColor="@color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="PostÄ™py dietetyczne"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="40dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="11sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lower_wrapper"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@drawable/gradient_bottom_main_page"
        android:layout_below="@+id/upper_wrapper"
        >

        <RelativeLayout
            android:id="@+id/menu_panel"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="50dp"
            android:layout_alignParentBottom="true"
            >

            <ImageButton
                android:id="@+id/home_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="65dp"
                android:layout_marginBottom="26dp"
                android:background="@drawable/ic_home"
                android:backgroundTint="@color/white" />

            <TextView
                android:layout_width="84dp"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:layout_marginHorizontal="80dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="12dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                />

            <ImageButton
                android:id="@+id/categories_btn"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="33dp"
                android:background="@drawable/ic_menu"
                android:backgroundTint="@color/grey" />

            <TextView
                android:layout_width="84dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="12dp"
                android:text="Categories"
                android:textColor="@color/grey"
                android:textSize="11sp"
                android:textAlignment="center"/>

            <ImageButton
                android:id="@+id/logout_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="65dp"
                android:layout_marginBottom="33dp"
                android:background="@drawable/ic_logout"
                android:backgroundTint="@color/grey" />

            <TextView
                android:layout_width="84dp"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textColor="@color/grey"
                android:textSize="11sp"
                android:layout_marginRight="47dp"
                android:textAlignment="center"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rounded_wrapper"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:background="@drawable/rounded_background"
        android:layout_marginHorizontal="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="170dp"
        android:elevation="20dp"
        android:alpha=".95">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/productRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:layout_marginTop="90dp"
            android:padding="16dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">

        </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>

</RelativeLayout>

